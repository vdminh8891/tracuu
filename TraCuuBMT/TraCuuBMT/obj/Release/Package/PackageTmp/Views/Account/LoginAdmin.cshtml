
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập | Tra cứu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">

    <!-- App css -->
    <link href="~/Content/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/app.min.css" rel="stylesheet" type="text/css" id="light-style" />
    <link href="~/Content/css/app-dark.min.css" rel="stylesheet" type="text/css" id="dark-style" />

</head>

<body class="loading authentication-bg" data-layout-config='{"leftSideBarTheme":"dark","layoutBoxed":false, "leftSidebarCondensed":false, "leftSidebarScrollable":false,"darkMode":false, "showRightSidebarOnStart": true}'>
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card">

                        <!-- Logo -->
                        <div class="card-header pt-4 pb-4 text-center bg-primary">
                            <a href="index.html">
                                <span><img src="assets/images/logo.png" alt="" height="18"></span>
                            </a>
                        </div>

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <h4 class="text-dark-50 text-center mt-0 font-weight-bold">Đăng nhập Quản trị</h4>
                                <p class="text-muted">Vui lòng nhập thông tin để đăng nhập.</p>
                            </div>

                            <form method="post" action="@Url.Action("LoginAdmin", "Account")">
                                <input type="text" id="returnUrl" name="returnUrl" readonly hidden value="@ViewBag.returnUrl"/>
                                <div class="form-group">
                                    <label for="txtPhone">Điện thoại</label>
                                    <input class="form-control" type="text" name="txtPhone" id="txtPhone" required="required" placeholder="Số điện thoại" value="123123">
                                </div>

                                <div class="form-group">
                                    <label for="txtEmail">Email</label>
                                    <input class="form-control" type="text" name="txtEmail" id="txtEmail" required="required" placeholder="Email" value="admin@gmail.com">
                                </div>

                                <div class="form-group">
                                    <label for="password">Mật khẩu</label>
                                    <input class="form-control" type="password" required="" name="txtPassword" id="txtPassword" placeholder="Mật khẩu" value="123">
                                </div>

                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary" type="submit"> Đăng nhập </button>
                                </div>

                            </form>
                        </div> <!-- end card-body -->
                    </div>


                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <footer class="footer footer-alt">
        2021 © Hệ thống tra cứu Biểu mẫu thuế
    </footer>

    <!-- bundle -->
    <script src="~/Content/js/vendor.min.js"></script>
    <script src="~/Content/js/app.min.js"></script>

</body>
</html>

