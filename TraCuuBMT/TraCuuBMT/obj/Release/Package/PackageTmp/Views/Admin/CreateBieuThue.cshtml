@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using TraCuuBMT.Models;
@using TraCuuBMT.General;

<div>
    <h3>Tạo mới biểu thuế</h3>
    <div class="contentAdmin">
        @*<form action="@Url.Action("CreateBieuThue","Admin")" method="post">*@
        @using (Html.BeginForm("CreateBieuThue", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="form-group">
                <label for="email">Tên biểu thuế(*):</label>
                <input type="text" class="form-control" id="tenBieuThue" name="tenBieuThue" required value="">
            </div>
            <div class="form-group">
                <label for="phone">Mô tả(*):</label>
                <input type="text" class="form-control" id="description" name="description" required value="">
            </div>
            <div class="form-group">
                <label for="phone">HS Code(*):</label>
                <input type="text" class="form-control" id="hsCode" name="hsCode" required value="">
            </div>
            <div class="form-group">
                <label for="phone">Biểu thuế:</label>
                <input type="text" class="form-control" id="bieuThue1" name="bieuThue1" required value="">
            </div>
            <div class="form-group">
                <label for="phone">Thuế suất (%):</label>
                <input type="text" class="form-control" id="thueSuat" name="thueSuat" required value="">
            </div>

            <div class="form-group">
                <label for="phone">ĐVT:</label>
                <input type="text" class="form-control" id="unit" name="unit" required value="">
            </div>
            <div class="form-group">
                <label for="phone">Ghi chú:</label>
                <textarea class="form-control" id="note" name="note"></textarea>
            </div>

            <div class="form-group">
                <label for="file_vn">File tiếng Việt</label>
                <input type="file" class="form-control-file" name="file_vn" id="file_vn">
            </div>

            @*<div class="form-group">
                <label for="exampleFormControlFile1">File tiếng Anh</label>
                <input type="file" class="form-control-file" name="file_en" id="file_en">
            </div>*@

            <div class="form-group">
                <label for="status">Trạng thái:</label>
                <select class="form-control" id="status" name="status">
                    @foreach (GeneralStatus item in Util.ListGeneralStatus)
                    {
                        if (item.StatusValue > 0)
                        {
                            <option value="@item.StatusValue">@item.StatusName</option>
                        }
                    }
                </select>
            </div>
            <div class="TwoButtonAdmin">
                <a href="@Url.Action("ListBieuThue", "Admin")" class="btn btn-default">Cancel</a>
                <input type="submit" class="btn btn-success" value="Save" />
            </div>
            @*</form>*@
        }
    </div>
</div>
